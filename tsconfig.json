{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node16", // было "node"
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node"],
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": false,
    "declarationDir": "./dist/types",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "index.ts", "custom.d.ts"
  ],
  "exclude": [
    "store/tests/**",
    "**/mocks/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
